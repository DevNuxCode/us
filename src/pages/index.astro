---
import Layout from '../layouts/Layout.astro';
import VideoCard from '../components/VideoCard.astro';
import { getVideos } from '../utils/api';

const videos = await getVideos();
const featuredVideos = videos.slice(0, 3); // Show only first 3 videos
---

<Layout title="Understudios">
  <!-- Hero Section -->
  <section class="relative hero-section text-white">
    <div class="mx-auto max-w-7xl px-4 py-32 sm:px-6 lg:px-8 text-center">
      <h1 class="text-4xl font-bold tracking-tight sm:text-5xl lg:text-6xl">
        Welcome to Understudios
      </h1>
      <p class="mt-6 text-xl">
        Creating amazing digital experiences
      </p>
    </div>
  </section>

  <!-- Services Section -->
  <section id="services" class="py-24 bg-white dark:bg-gray-800">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-center mb-12">Our Services</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="p-6 bg-gray-50 dark:bg-gray-700 rounded-lg">
          <h3 class="text-xl font-semibold mb-4">Video Production</h3>
          <p>Professional video production services for all your needs.</p>
        </div>
        <div class="p-6 bg-gray-50 dark:bg-gray-700 rounded-lg">
          <h3 class="text-xl font-semibold mb-4">Animation</h3>
          <p>Creative animation services to bring your ideas to life.</p>
        </div>
        <div class="p-6 bg-gray-50 dark:bg-gray-700 rounded-lg">
          <h3 class="text-xl font-semibold mb-4">Post-Production</h3>
          <p>Expert post-production services for the perfect finish.</p>
        </div>
      </div>
      <div class="mt-12 text-center">
        <a href="/services" class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white btn-primary hover:btn-primary">
          View All Services
        </a>
      </div>
    </div>
  </section>

  <!-- Videos Section -->
  <section id="videos" class="py-24 bg-white dark:bg-blue-950">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-center mb-12 text-gray-900 dark:text-white">Our Videos</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {featuredVideos.map((video) => (
          <VideoCard {...video} />
        ))}
      </div>
      <div class="mt-12 text-center">
        <a href="/videos" class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white btn-primary hover:btn-primary">
          View All Videos
        </a>
      </div>
    </div>
  </section>

  <!-- Contact Section remains the same -->
</Layout>

  <!-- Contact Section -->
  <section id="contact" class="py-24 light:bg-white dark:bg-gray-800">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-center mb-12">Contact Us</h2>
      <form class="max-w-lg mx-auto">
        <div class="space-y-6">
          <div>
            <label for="name" class="block text-sm font-medium light:text-gray-700 dark:text-gray-300">
              Name
            </label>
            <input
              type="text"
              name="name"
              id="name"
              class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 dark:bg-gray-700 dark:border-gray-600 dark:text-white sm:text-sm"
            />
          </div>
          <div>
            <label for="email" class="block text-sm font-medium text-gray-700 dark:text-gray-300">
              Email
            </label>
            <input
              type="email"
              name="email"
              id="email"
              class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 dark:bg-gray-700 dark:border-gray-600 dark:text-white sm:text-sm"
            />
          </div>
          <div>
            <label for="message" class="block text-sm font-medium text-gray-700 dark:text-gray-300">
              Message
            </label>
            <textarea
              name="message"
              id="message"
              rows="4"
              class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 dark:bg-gray-700 dark:border-gray-600 dark:text-white sm:text-sm"
            ></textarea>
          </div>
          <div>
            <button
              type="submit"
              class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white btn-primary hover:btn-primary focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-50 focus:ring-current"
            >
              Send Message
            </button>
          </div>
        </div>
      </form>
    </div>
  </section>
</Layout>