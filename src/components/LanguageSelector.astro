---
const { currentPath = '/' } = Astro.props;
---

<div class="relative inline-block text-left">
  <select
    id="language-select"
    class="block w-full rounded-md border-gray-300 py-2 pl-3 pr-10 text-base focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 dark:bg-gray-700 dark:border-gray-600 dark:text-white sm:text-sm"
  >
    <option value="en">English</option>
    <option value="es">Espa√±ol</option>
  </select>
</div>

<script>
  const languageSelect = document.getElementById('language-select') as HTMLSelectElement;
  
  languageSelect?.addEventListener('change', (e) => {
    const target = e.target as HTMLSelectElement;
    const newLang = target.value;
    const currentPath = window.location.pathname;
    
    // Update URL with new language
    if (newLang === 'es') {
      window.location.href = `/es${currentPath}`;
    } else {
      window.location.href = currentPath.replace('/es', '');
    }
  });
</script>