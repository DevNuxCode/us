---

<footer class="hero-section light:bg-primary dark:bg-gray-900" >
  <div class="mx-auto max-w-7xl px-6 py-12 lg:px-8">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {/* Column 1: Logo and Tagline */}
      <div class="flex flex-col">
        <h2 class="text-2xl font-bold light:text-gray-900 dark:text-white">Understudios</h2>
        <p class="mt-2 text-sm text-gray-500 dark:text-gray-400">Since 2003</p>
              </div>

      {/* Column 2: Navigation Links */}
      <div>
        <h3 class="text-sm font-semibold light:text-gray-900 dark:text-white mb-4">Navigation</h3>
        <ul class="space-y-3">
          {navigation.main.map((item) => (
            <li>
              <a href={item.href} class="text-sm text-gray-500 hover:text-gray-600 dark:text-gray-400 dark:hover:text-gray-300">
                {item.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      {/* Column 3: Social Links */}
      <div>
        <h3 class="text-sm font-semibold light:text-gray-900 dark:text-white mb-4">Follow Us</h3>
        <div class="flex space-x-4">
          {navigation.social.map((item) => (
            <a href={item.href} class="text-gray-400 hover:text-gray-500 dark:hover:text-gray-300">
              <span class="sr-only">{item.name}</span>
              <Fragment set:html={item.icon} />
            </a>
            
          ))}
          <div class="mt-4">
            <label for="theme-select" class="block text-sm light:text-gray-500 dark:text-gray-400 mb-1">Theme:</label>
            <select
              id="theme-select"
              class="w-full rounded-md border-gray-300 py-1.5 text-sm focus:border-indigo-500 focus:ring-indigo-500 dark:bg-gray-800 dark:border-gray-600 dark:text-white"
            >
              {themes.map((theme) => (
                <option value={theme.value}>{theme.name}</option>
              ))}
            </select>
          </div>
  
        </div>
      </div>
    </div>

    <div class="mt-8 border-t border-gray-200 dark:border-gray-700 pt-8">
      <p class="text-center text-xs leading-5 text-gray-500 dark:text-gray-400">
        &copy; {new Date().getFullYear()} Understudios. All rights reserved.
      </p>
    </div>
  </div>
</footer>

<script>
  import { setTheme, getStoredTheme } from '../utils/theme';

  const themeSelect = document.getElementById('theme-select') as HTMLSelectElement;
  
  themeSelect?.addEventListener('change', (e) => {
    const target = e.target as HTMLSelectElement;
    setTheme(target.value as any);
  });

  // Set initial theme
  const savedTheme = getStoredTheme();
  if (themeSelect) {
    themeSelect.value = savedTheme;
  }
  setTheme(savedTheme);
</script>