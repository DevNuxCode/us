<div class="fixed inset-0 z-50 flex items-center justify-center bg-white dark:bg-gray-900">
  <div class="text-center">
    <div class="animate-bounce mb-4">
      <svg class="w-16 h-16 text-indigo-600 dark:text-indigo-400" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M12 2L2 19H22L12 2Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        <path d="M12 22C13.1046 22 14 21.1046 14 20C14 18.8954 13.1046 18 12 18C10.8954 18 10 18.8954 10 20C10 21.1046 10.8954 22 12 22Z" fill="currentColor"/>
      </svg>
    </div>
    <span class="text-xl font-bold text-gray-900 dark:text-white">Understudios</span>
  </div>
</div>

<script>
  window.addEventListener('load', () => {
    const loader = document.querySelector('.fixed');
    setTimeout(() => {
      loader?.classList.add('opacity-0', 'pointer-events-none');
      setTimeout(() => {
        loader?.classList.add('hidden');
      }, 300);
    }, 1000);
  });
</script>

<style>
  .opacity-0 {
    opacity: 0;
    transition: opacity 0.3s ease-out;
  }
</style>