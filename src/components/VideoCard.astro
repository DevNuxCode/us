---
import type { VideoCardProps } from '../utils/types';
import { formatDate } from '../utils/date';

interface Props extends VideoCardProps {}

const { id, date, imageUrl, name, note, bpm, url, url_dk } = Astro.props;
const formattedDate = formatDate(date);
---

<div class="bg-white dark:bg-blue-950 rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300">
  <img 
    src={imageUrl} 
    alt={name || `Video ${id}`}
    class="w-full h-48 object-cover"
  />
  <div class="p-6">
    <div class="space-y-4">
      <div class="flex justify-between items-start">
        <span class="text-sm text-gray-500 dark:text-gray-400">ID: {id}</span>
        <span class="text-sm text-gray-500 dark:text-gray-400">{formattedDate}</span>
      </div>
      {name && (
        <div class="text-gray-900 dark:text-white font-medium">
          {name}
        </div>
      )}
      <div class="flex justify-between items-center text-sm text-gray-600 dark:text-gray-300">
        {note && <span>Note: {note}</span>}
        {bpm && <span>BPM: {bpm}</span>}
      </div>
    </div>
    <div class="mt-6 space-y-3">
      <a
        href={`/video/${id}`}
        class="block w-full text-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
      >
        Ver Detalles
      </a>
     
    </div>

    


  </div>
</div>
