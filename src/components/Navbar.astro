<nav>
  <div class="nav-content">
    <div class="logo">
      <a href="/">
        <img src="/logo.svg" alt="Understudios Logo" />
        <span>Understudios</span>
      </a>
    </div>
    
    <button class="mobile-menu-btn" aria-label="Toggle menu">
      <span></span>
      <span></span>
      <span></span>
    </button>

    <div class="nav-links">
      <a href="/" class="nav-link">Home</a>
      <a href="/beats" class="nav-link">Beats</a>
      <a href="/contact" class="nav-link">Contact</a>
      <button id="theme-toggle" aria-label="Toggle theme">
        <svg class="sun-icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <circle cx="12" cy="12" r="5"/>
          <line x1="12" y1="1" x2="12" y2="3"/>
          <line x1="12" y1="21" x2="12" y2="23"/>
          <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"/>
          <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"/>
          <line x1="1" y1="12" x2="3" y2="12"/>
          <line x1="21" y1="12" x2="23" y2="12"/>
          <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"/>
          <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"/>
        </svg>
        <svg class="moon-icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"/>
        </svg>
      </button>
    </div>
  </div>
</nav>

<style>
  nav {
    background: rgba(31, 0, 23, 0.8);
    backdrop-filter: blur(10px);
    position: sticky;
    top: 0;
    z-index: 1000;
    padding: 1rem 0;
  }

  [data-theme="light"] nav {
    background: rgba(156, 23, 23, 0.8);
  }

  .nav-content {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo a {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    text-decoration: none;
    color: inherit;
  }

  .logo img {
    height: 2rem;
  }

  .nav-links {
    display: flex;
    gap: 2rem;
    align-items: center;
  }

  .nav-link {
    color: inherit;
    text-decoration: none;
    font-weight: 500;
    transition: color 0.3s ease;
  }

  .nav-link:hover {
    color: rgb(var(--accent));
  }

  [data-theme="light"] .nav-link:hover {
    color: var(--active-link-light);
  }

  #theme-toggle {
    background: rgba(54, 1, 1, 0.8);
    border: none;
    color: inherit;
    cursor: pointer;
    padding: 0.5rem;
    border-radius: 50%;
    transition: background-color 0.3s ease;
  }

  #theme-toggle:hover {
    background: rgba(var(--accent), 0.1);
  }

  .sun-icon {
    display: none;
  }

  [data-theme="dark"] .moon-icon {
    display: none;
  }

  [data-theme="dark"] .sun-icon {
    display: block;
  }

  .mobile-menu-btn {
    display: none;
  }

  @media (max-width: 768px) {
    .mobile-menu-btn {
      display: block;
      background: none;
      border: none;
      padding: 0.5rem;
      cursor: pointer;
    }

    .mobile-menu-btn span {
      display: block;
      width: 25px;
      height: 2px;
      background-color: white;
      margin: 5px 0;
      transition: 0.3s;
    }

    .nav-links {
      display: none;
      position: absolute;
      top: 100%;
      left: 0;
      right: 0;
      background: rgba(31, 0, 26, 0.95);
      padding: 1rem;
      flex-direction: column;
      align-items: center;
    }

    [data-theme="light"] .nav-links {
      background: rgba(41, 0, 35, 0.95);
    }

    .nav-links.active {
      display: flex;
    }
  }
</style>

<script>
  document.addEventListener('astro:page-load', () => {
    const mobileMenuBtn = document.querySelector('.mobile-menu-btn');
    const navLinks = document.querySelector('.nav-links');

    mobileMenuBtn?.addEventListener('click', () => {
      navLinks?.classList.toggle('active');
    });
  });
</script>